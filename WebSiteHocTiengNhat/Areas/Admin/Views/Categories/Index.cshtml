@model IEnumerable<WebSiteHocTiengNhat.Models.Category>

@{
    ViewData["Title"] = "Thể loại";
}


<div style="padding:0 22px 0 22px">
    <h2 style="padding-bottom:8px">List Category</h2>
    <a asp-area="Admin" asp-controller="Categories" asp-action="Create" style="padding: 12px; background-color:deepskyblue;
                    border-radius: 5px; text-decoration:none;color:white;max-width:160px">Create new</a>
</div>

<div class="card-body">
    <h4 class="header-title">Thead Primary</h4>
    <div class="single-table">
        <div class="table-responsive">
            <table class="table text-center">
                <thead class="text-uppercase bg-primary">
                    <tr class="text-white">
                        <th scope="col">Row</th>
                        <th scope="col">CategoryName</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                @{
                    int i = 1;
                }
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@i</th>
                            <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                            </td>
                        </tr>
                        i++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>