@model WebSiteHocTiengNhat.Models.CategoryQuestion

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Category Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Nhập tên danh mục -->
            <div class="form-group">
                <label asp-for="CategoryQuestionName" class="control-label"></label>
                <input asp-for="CategoryQuestionName" class="form-control" />
                <span asp-validation-for="CategoryQuestionName" class="text-danger"></span>
            </div>

            <!-- Chọn loại câu hỏi -->
            <div class="form-group">
                <label>Question Type</label><br />
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="QuestionType" id="IsGrammarVocabulary" value="IsGrammarVocabulary" />
                    <label class="form-check-label" for="IsGrammarVocabulary">Grammar & Vocabulary</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="QuestionType" id="IsListen" value="IsListen" />
                    <label class="form-check-label" for="IsListen">Listen</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="QuestionType" id="IsReading" value="IsReading" />
                    <label class="form-check-label" for="IsReading">Reading</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="QuestionType" id="IsSpeacking" value="IsSpeacking" />
                    <label class="form-check-label" for="IsSpeacking">Speacking</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="QuestionType" id="IsWriting" value="IsWriting" />
                    <label class="form-check-label" for="IsWriting">Writing</label>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
