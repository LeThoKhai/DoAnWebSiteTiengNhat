@model WebSiteHocTiengNhat.Models.Exercise
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Create Exercise";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="CourseId" />
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="ExerciseName"></label>
        <input asp-for="ExerciseName" class="form-control" />
        <span asp-validation-for="ExerciseName" class="text-danger"></span>
    </div>
   <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control">Question</textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="form-check">
            <input asp-for="IsExam" class="form-check-input" type="checkbox" />
            <label asp-for="IsExam" class="form-check-label">Is Exam</label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
