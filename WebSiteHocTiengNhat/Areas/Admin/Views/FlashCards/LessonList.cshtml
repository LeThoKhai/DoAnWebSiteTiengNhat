@using WebSiteHocTiengNhat.ViewModels
@model LessonsViewModel

<div class="container">
    <div class="row align-items-center mb-3">
        <div class="col-md-6">
            <h2>Lessons for @Model.CourseName</h2>
        </div>
        <div class="col-md-6 text-right">
            <div class="dropdown show">
                <form asp-action="LessonList" method="get">
                    <input type="hidden" asp-for="CourseId" />
                    <div class="form-group col-lg-10 d-flex" style="margin-left:-7%">
                        <input type="text" name="search" class="form-control" placeholder="Lesson Name..." />
                    </div>
                </form>
            </div>
        </div>
       
    </div>
    <style>
        .lesson-card {
            transition: transform 0.3s;
            margin: 0; /* Reset default margin */
        }

            .lesson-card:hover {
                transform: scale(1.05);
            }

        .lesson-link {
            text-decoration: none; /* Remove underline from link */
        }

        .card-title {
            text-align: center;
        }

    </style>
    <div class="row" style="gap: 10px;">
        @foreach (var lesson in Model.Lessons)
        {
            <div class="col-4 col-md-3">
                <a asp-action="FlashCardList" asp-controller="FlashCards" asp-route-Lessonid="@lesson.LessonId" class="lesson-link">
                    <div class="alert alert-info lesson-card" role="alert">
                        <h5 class="card-title">@lesson.LessonName</h5>
                    </div>
                </a>
            </div>
        }
    </div>
@*     <a style="padding-top:50px" asp-action="Index" asp-controller="FlashCards">Back</a>  *@
</div>

