@using DocumentFormat.OpenXml.Bibliography
@model WebSiteHocTiengNhat.Models.Lesson
<div class="main-content-inner">
    <div class="row">
        <div class="col-lg-12 mt-5">
            <div class="card">
                <div class="card-body">
                    <div class="invoice-area">
                        <div class="invoice-head">
                            <div class="row">
                                <div class="iv-left col-6">
                                    <span>Lesson</span>
                                </div>
                                <div class="iv-right col-6 text-md-right">
                                    <span>ID: #@Model.CourseId</span>
                                </div>
                            </div>
                        </div>
                        <div class="row align-items-center">
                            <div class="col-md-6">
                                <div class="invoice-address">
                                    <h3>@Model.LessonName</h3>
                                </div>
                            </div>
                        </div>
                        <div class="invoice-table table-responsive mt-5">
                            <p>
                                @Html.Raw(Model.Content)
                            </p>
                        </div>
                    </div>
                    <div class="invoice-buttons text-right">
                        <a asp-action="Update" asp-controller="Lessons" asp-route-id="@Model.LessonId" class="btn btn-warning btn-sm">Update</a>
                        <a asp-action="Delete" asp-controller="Lessons" asp-route-id="@Model.LessonId" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                    <a asp-action="LessonList" asp-controller="Lessons" asp-route-id="@Model.CourseId">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>