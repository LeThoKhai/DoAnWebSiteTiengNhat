    <script>


        document.addEventListener('DOMContentLoaded', function () {
            // Get the current URL path
            var path = window.location.pathname;

            // Split the path into segments
            var segments = path.split('/').filter(function (segment) {
                return segment.length > 0;
            });

            // Reference to the breadcrumb list element
            var breadcrumbList = document.getElementById('breadcrumb-list');

            // Add "Home" breadcrumb
            var homeBreadcrumb = document.createElement('li');
            var homeLink = document.createElement('a');
            homeLink.href = '/';
            homeLink.textContent = 'Home';
            homeBreadcrumb.appendChild(homeLink);
            breadcrumbList.appendChild(homeBreadcrumb);

            // Filter out segments before "admin"
            var startAdding = false;
            var filteredSegments = segments.filter(function (segment) {
                if (segment.toLowerCase() === 'admin') {
                    startAdding = true;
                }
                return startAdding;
            });

            // Create and add breadcrumb items for each filtered segment
            var currentPath = '';
            filteredSegments.forEach(function (segment, index) {
                currentPath += '/' + segment;

                var breadcrumbItem = document.createElement('li');
                if (index === filteredSegments.length - 1) {
                    // Last segment, no link
                    breadcrumbItem.textContent = capitalize(segment);
                } else {
                    // Intermediate segments, add link
                    var link = document.createElement('a');
                    link.href = currentPath;
                    link.textContent = capitalize(segment);
                    breadcrumbItem.appendChild(link);
                }
                breadcrumbList.appendChild(breadcrumbItem);
            });
        });

        // Helper function to capitalize the first letter of a string
        function capitalize(str) {
            return str.charAt(0).toUpperCase() + str.slice(1);
        }
