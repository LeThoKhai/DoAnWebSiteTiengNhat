@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li style="list-style-type: none" class="button-header margin-lef ">
        <a id="manage" class="btn btn3" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)!</a>
    </li>
    <li style="list-style-type: none" class="button-header">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
        </form>
    </li>
}
else
{
    <li class="button-header margin-lef"><a class="btn" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
    <li class="button-header"><a class="btn btn3" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
}
